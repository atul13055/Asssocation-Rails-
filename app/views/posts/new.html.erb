<h2>Add Post:</h2>
<%= form_with model: @user, url:  user_posts_path, id:"MyForm", local:false, method: :post do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
   <p>
    <%= form.label :body  %><br>
    <%= form.text_field :desc %>
  </p>

    <%= form.submit %>
  </p>
<% end %>
<%= link_to "Back",root_path %>

