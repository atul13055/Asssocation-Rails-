
  <center>
  <h1> <strong><%= current_user.email %></strong><br> Posts </h1>
  
<table border="1">
  <thead>
    <tr>
      <th>Poster Email</th>
      <th>post</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
     <% if post.user == current_user %>
          <tr>
            <td><%= post.user.email %></td>
            <td><%= post.title %></td>
            <td><%= post.desc %></td>
            <th><%=link_to "Delete", user_post_path(current_user, post),:remote => true, method: :delete %></td>
            
         </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= link_to "Back" , root_path %>